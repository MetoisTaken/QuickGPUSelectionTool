<Window x:Class="QGST.UI.GpuPreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPU Preferences" 
        Height="600" Width="700"
        MinHeight="450" MinWidth="550"
        WindowStartupLocation="CenterOwner"
        Background="#0A0A0A" Foreground="#E8E8E8"
        ResizeMode="CanResizeWithGrip">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundCard" Color="#141414"/>
        <SolidColorBrush x:Key="BackgroundHover" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderSubtle" Color="#27272A"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F59E0B"/>
        
        <!-- Dark ScrollBar -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent" Margin="2,0,2,0">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#3F3F46" CornerRadius="4" Margin="0,1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Delete Button -->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="#2D1F1F"/>
            <Setter Property="Foreground" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="10,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D2020"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D2525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="ðŸ“‹ GPU Preferences" FontSize="22" FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock x:Name="TxtSubtitle" Text="Applications with GPU preferences set in Windows" 
                       FontSize="13" Foreground="{StaticResource TextMuted}" Margin="0,6,0,0"/>
        </StackPanel>
        
        <!-- Legend -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundCard}" CornerRadius="8" 
                Padding="16,12" Margin="0,0,0,16" BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <Border Width="12" Height="12" CornerRadius="3" Background="{StaticResource AccentBlue}" Margin="0,0,8,0"/>
                    <TextBlock Text="QGST" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <Border Width="12" Height="12" CornerRadius="3" Background="{StaticResource AccentYellow}" Margin="0,0,8,0"/>
                    <TextBlock Text="Windows" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Border Width="12" Height="12" CornerRadius="3" Background="{StaticResource TextMuted}" Margin="0,0,8,0"/>
                    <TextBlock Text="Other" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Preferences List -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundCard}" CornerRadius="10" 
                BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="4">
                <ItemsControl x:Name="ListPreferences">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ItemBorder" Background="Transparent" CornerRadius="8" 
                                    Margin="4,2" Padding="14,10" Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1E1E1E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Source Indicator -->
                                    <Border Width="4" CornerRadius="2" Margin="0,0,12,0"
                                            Background="{Binding SourceColor}"/>
                                    
                                    <!-- App Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding AppName}" FontSize="13" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}" 
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding AppPath}" FontSize="11" 
                                                   Foreground="{StaticResource TextMuted}"
                                                   TextTrimming="CharacterEllipsis" MaxWidth="350"
                                                   ToolTip="{Binding AppPath}"/>
                                    </StackPanel>
                                    
                                    <!-- GPU Preference -->
                                    <Border Grid.Column="2" Background="#27272A" CornerRadius="4" 
                                            Padding="10,5" Margin="10,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding GpuPreferenceDisplay}" FontSize="11"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                    </Border>
                                    
                                    <!-- Delete Button -->
                                    <Button Grid.Column="3" Style="{StaticResource DeleteButton}"
                                            Content="ðŸ—‘" FontSize="14" ToolTip="Remove preference"
                                            Click="BtnDelete_Click" Tag="{Binding AppPath}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Empty State -->
        <Border x:Name="EmptyState" Grid.Row="2" Visibility="Collapsed"
                Background="{StaticResource BackgroundCard}" CornerRadius="10" 
                BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸŽ‰" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="No GPU preferences set" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                <TextBlock Text="Applications will use Windows defaults" FontSize="13"
                           Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Footer -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="TxtCount" Text="0 preferences" FontSize="13" 
                       Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
            
            <Button x:Name="BtnClose" Grid.Column="1" Content="Close" 
                    Background="#27272A" Foreground="{StaticResource TextPrimary}"
                    FontSize="14" Padding="24,10" BorderThickness="0" Cursor="Hand"
                    Click="BtnClose_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3F3F46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
