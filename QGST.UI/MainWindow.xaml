<Window x:Class="QGST.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="QGST - Quick GPU Selection Tool" 
        Height="860" Width="560"
        MinHeight="840" MinWidth="520"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A" Foreground="#E8E8E8"
        ResizeMode="CanResizeWithGrip"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <!-- Color Palette - Modern Dark Theme -->
        <SolidColorBrush x:Key="BackgroundDark" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="#141414"/>
        <SolidColorBrush x:Key="BackgroundCardHover" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BackgroundHover" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="BackgroundSelected" Color="#0066CC"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="AccentBlueHover" Color="#1A8CD8"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderSubtle" Color="#27272A"/>
        <SolidColorBrush x:Key="BorderFocus" Color="#3B82F6"/>
        
        <!-- Dark ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent" Margin="2,0,2,0">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder" Background="#3F3F46" CornerRadius="4" Margin="0,1"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="thumbBorder" Property="Background" Value="#52525B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A8CD8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#27272A"/>
                                <Setter Property="Foreground" Value="#52525B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#18181B"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27272A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3F3F46"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E1E1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27272A"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GPU Card Style -->
        <Style x:Key="GpuListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="20,18"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{StaticResource BackgroundCard}" 
                                CornerRadius="12" Padding="{TemplateBinding Padding}" 
                                Margin="{TemplateBinding Margin}"
                                BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BackgroundCardHover}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#3F3F46"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0C4A6E"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Mode Toggle Style -->
        <Style x:Key="ModeToggle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent" 
                                CornerRadius="8" Padding="24,12">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27272A"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#1A8CD8"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="28,24,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="QGST" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Quick GPU Selection Tool" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4,0,0"/>
            </StackPanel>
            
            <Button x:Name="BtnSettings" Grid.Column="1" Style="{StaticResource IconButton}" 
                    Content="âš™" Click="BtnSettings_Click" ToolTip="Settings"/>
        </Grid>

        <!-- Target Section -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundCard}" CornerRadius="12" 
                Margin="28,24,28,0" Padding="20" BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="LblTargetHeader" Text="TARGET APPLICATION" FontSize="11" 
                           Foreground="{StaticResource TextMuted}" 
                           FontWeight="SemiBold" Margin="0,0,0,12"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Background="#18181B" CornerRadius="8" Padding="14,12" Margin="0,0,12,0"
                            BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
                        <TextBlock x:Name="TxtTarget" 
                                   FontSize="13" Foreground="{StaticResource TextSecondary}" 
                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                    </Border>
                    
                    <Button x:Name="BtnClearTarget" Grid.Column="1" Style="{StaticResource SecondaryButton}"
                            Content="âœ•" Click="BtnClearTarget_Click" Padding="12,12" Visibility="Collapsed"
                            Foreground="#EF4444"/>
                    <Button x:Name="BtnBrowse" Grid.Column="2" Style="{StaticResource SecondaryButton}"
                            Content="ðŸ“„" Click="BtnBrowse_Click" Padding="12,12" Margin="8,0,0,0"/>
                    <Button x:Name="BtnBrowseFolder" Grid.Column="3" Style="{StaticResource SecondaryButton}"
                            Content="ðŸ“" Click="BtnBrowseFolder_Click" Padding="12,12" Margin="8,0,0,0" IsEnabled="False"
                            ToolTipService.ShowOnDisabled="True"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Mode Toggle -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundCard}" CornerRadius="12" 
                Margin="28,16,28,0" Padding="6" BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="ModeOneTime" Style="{StaticResource ModeToggle}" 
                             IsChecked="True" GroupName="Mode" Checked="Mode_Changed"/>
                <RadioButton x:Name="ModeDefault" Grid.Column="1" Style="{StaticResource ModeToggle}" 
                             GroupName="Mode" Checked="Mode_Changed"/>
            </Grid>
        </Border>

        <!-- GPU Grid -->
        <Grid Grid.Row="3" Margin="28,20,28,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="280"/>
            </Grid.RowDefinitions>
            
            <Grid Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="LblGpuHeader" Text="SELECT GPU" FontSize="11" 
                           Foreground="{StaticResource TextMuted}" 
                           FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button x:Name="BtnRefresh" Grid.Column="1" Style="{StaticResource IconButton}"
                        Content="ðŸ”„" Click="BtnRefresh_Click" ToolTip="Refresh GPU list" 
                        Width="36" Height="36"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="ListGpus" ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="GpuCard" Margin="4" CornerRadius="12" Cursor="Hand"
                                    Background="#1F1F23" BorderThickness="2" BorderBrush="Transparent"
                                    MouseLeftButtonDown="GpuCard_Click">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27272A"/>
                                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid Margin="16,14">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Header: Vendor Badge + Type -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Vendor Icon -->
                                        <Border Width="40" Height="40" CornerRadius="8" Background="#27272A">
                                            <TextBlock Text="{Binding Vendor, Converter={StaticResource VendorInitialConverter}}" 
                                                       FontSize="16" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Foreground="{Binding Vendor, Converter={StaticResource VendorColorConverter}}"/>
                                        </Border>
                                        
                                        <!-- Type Badge -->
                                        <Border Grid.Column="2" CornerRadius="4" Padding="6,3" VerticalAlignment="Top"
                                                Background="{Binding IsIntegrated, Converter={StaticResource GpuTypeBgConverter}}">
                                            <TextBlock Text="{Binding IsIntegrated, Converter={StaticResource GpuTypeConverter}}" 
                                                       FontSize="9" FontWeight="SemiBold"
                                                       Foreground="{Binding IsIntegrated, Converter={StaticResource GpuTypeFgConverter}}"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- GPU Name -->
                                    <TextBlock Grid.Row="1" Text="{Binding ShortDisplayName}" 
                                               FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               TextWrapping="Wrap" Margin="0,10,0,8"/>
                                    
                                    <!-- VRAM + Slot -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <Border Background="#27272A" CornerRadius="4" Padding="6,3" Margin="0,0,6,0">
                                            <TextBlock Text="{Binding VramGB, StringFormat={}{0} GB}" 
                                                       FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                        </Border>
                                        <Border Background="#27272A" CornerRadius="4" Padding="6,3">
                                            <TextBlock Text="{Binding LocationInfo}" 
                                                       FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Action Bar -->
        <Border Grid.Row="4" Background="{StaticResource BackgroundCard}" Padding="28,16" 
                Margin="0,16,0,0" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderSubtle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Context Menu Toggle -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LblContextMenu" Text="Explorer Context Menu" 
                                   FontSize="13" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Toggle Switch -->
                    <CheckBox x:Name="ChkContextMenu" Grid.Column="1" 
                              Checked="ChkContextMenu_Changed" Unchecked="ChkContextMenu_Changed">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid Cursor="Hand">
                                    <Border x:Name="track" Width="44" Height="24" CornerRadius="12" 
                                            Background="#3F3F46"/>
                                    <Border x:Name="thumb" Width="18" Height="18" CornerRadius="9" 
                                            Background="White" HorizontalAlignment="Left" Margin="3,0,0,0"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="track" Property="Background" Value="#10B981"/>
                                        <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                        <Setter TargetName="thumb" Property="Margin" Value="0,0,3,0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                </Grid>
                
                <!-- Buttons -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="BtnReset" Style="{StaticResource SecondaryButton}" 
                            Content="Reset" Click="BtnReset_Click"/>
                    
                    <Button x:Name="BtnViewPrefs" Grid.Column="1" Style="{StaticResource SecondaryButton}"
                            Content="ðŸ“‹" ToolTip="View GPU Preferences" Margin="8,0,0,0"
                            Click="BtnViewPrefs_Click" Padding="12,12"/>
                    
                    <Button x:Name="BtnRun" Grid.Column="2" Style="{StaticResource PrimaryButton}"
                            Content="â–¶  Run with GPU" HorizontalAlignment="Stretch" Margin="16,0,0,0"
                            Click="BtnRun_Click" IsDefault="True"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Toast Notification with Animation -->
        <Border x:Name="ToastNotification" Grid.RowSpan="5" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,100" Opacity="0" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TranslateTransform x:Name="ToastTranslate" Y="20"/>
            </Border.RenderTransform>
            <Border x:Name="ToastBorder" CornerRadius="10" Padding="20,14"
                    BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ToastIcon" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="ToastMessage" FontSize="14" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="5" Background="#E6000000" Visibility="Collapsed">
            <Border Background="{StaticResource BackgroundCard}" CornerRadius="16" 
                    Padding="48,36" HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderThickness="1" BorderBrush="{StaticResource BorderSubtle}">
                <StackPanel>
                    <TextBlock Text="â³" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock x:Name="TxtLoading" Text="Running..." FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtLoadingDetail" Text="Application is running. Preference will revert when it exits." 
                               FontSize="13" Foreground="{StaticResource TextSecondary}" 
                               HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" MaxWidth="280"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
